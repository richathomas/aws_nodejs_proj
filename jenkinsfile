ipeline {
    agent any

    environment {
        IMAGE_NAME = "aws_nodejs_proj:latest"
        CONTAINER_NAME = "aws_nodejs_proj_container"
        PORT = "8000"
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/richathomas/aws_nodejs_proj.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo "Building Docker image..."
                    sh "docker build -t ${IMAGE_NAME} ."
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    echo "Stopping existing container if it exists..."
                    sh "docker stop ${CONTAINER_NAME} || true"
                    sh "docker rm ${CONTAINER_NAME} || true"
                    sleep 2
                    echo "Running container..."
                    sh "docker run -d --name ${CONTAINER_NAME} -p ${PORT}:${PORT} ${IMAGE_NAME}"
                }
            }
        }

        stage('Verify Application') {
            steps {
                script {
                    echo "Checking if the app is running..."
                    sh "sleep 5" // give the container a few seconds to start
                    sh "curl -f http://localhost:${PORT}"
                }
            }
        }
    }

    post {
        success {
            echo "Pipeline succeeded! Container is running and healthy."
        }
        failure {
            echo "Pipeline failed! Check logs for details."
        }
    }
}
